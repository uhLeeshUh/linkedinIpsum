{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "removeComments": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "schema": ["@types/schema.d.ts"]
    }
  },
  "include": [
    "@types",
    "./src/server/**/*.ts",
    "./src/app/**/*.ts",
    "./src/app/**/*.tsx"
  ],
  "exclude": ["node_modules", "webpack.*.js"]
}
