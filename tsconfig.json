{
  "compilerOptions": {
    "module": "CommonJS", // https://www.npmjs.com/package/ts-node#import-statements
    "moduleResolution": "node",
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "schema": ["@types/schema.d.ts"]
    }
  },
  "include": [
    "@types",
    "./src/server/**/*.ts",
    "./src/app/**/*.ts",
    "./src/app/**/*.tsx"
  ],
  "exclude": ["public", "dist", "node_modules", "webpack.*.js"]
}
